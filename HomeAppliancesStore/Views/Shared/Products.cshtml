@model HomeAppliancesStore.Models.Product

<div class="col-lg-4">
      <img src="@Model.img" width="300" height="300" alt="@Model.Name" />
      <h2>@Model.Name</h2>
      <p>Цена: @Model.Price.ToString("# руб")</p>
      <p>
         <a class="btn btn-success" asp-controller="Basket" asp-action="AddInBasket" asp-route-id="@Model.ProductId">В корзину</a>
      </p>
</div>