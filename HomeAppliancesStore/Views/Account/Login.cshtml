@model HomeAppliancesStore.ViewModels.LoginViewModel

<div class="bg-secondary m-1 p-1 text-white"><h4>Вход</h4></div>
<div class="text-danger" asp-validation-summary="All"></div>
<form asp-action="Login" method="post">
    <input type="hidden" name="url" value="@ViewBag.Message"/>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <button class="btn btn-secondary" type="submit">Log In</button>
</form>